@page
@using ClassLibrary.Entities
@model ToornamentWeb.Pages.AvailableTournamentsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Available tournaments";
}


<div id="grid_container">
    <div id="sub_nav_container"></div>
    <div id="content_container">
        <div id="content_container">
            @foreach (TournamentRoundRobin t in Model.Tournaments)
            {
                <div class="student_card">
                    <a class="link" asp-page="/TournamentView" asp-route-tournamentid=@t.Id>Tournament: @t.SportType.GetName()</a>
                    <p>Start date:@t.StartDate.ToShortDateString()<br> Location:@t.City<br> participants: min:@t.MinParticipants/max:@t.MaxParticipants</p>
                </div>
            }
        </div>
    </div>
    <div id="sidebar_container"></div>
 </div>
